@model IEnumerable<ForumWeb.Models.ForumViewModel>



<div class="container body-content">
    <div class="row front-page-title">
        <div class="col-md-6 front-page-learn">
            <div class="front-page-heading">Learn,Collaborate,<br />Share Knowledge</div>
            <p class="front-page-sub-heading">World's fastest<br /> growing coding forum</p>
            <form asp-action="Search" method="post">
                <input type="text" class="homeSearch" placeholder="Search Forums..." />
            </form>
        </div>
    </div>
    <div class="row front-page-content">
        <h3 class="latest-forums">Latest Forums</h3>
        <table class="table table-hover" id="latest-forums">
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        <img src="@item.ImageUrl" class="forum-logo" style="width:40px; height:40px; margin-right:20px; border-radius:3px;" />
                    </td>
                    <td>
                        <div class="forum-title">
                            @Html.ActionLink(item.Title, "Details", new { id = item.Id})
                        </div>
                        <div class="forum-sub-title">
                            @Html.DisplayFor(modelItem => item.Description)
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="section-heading">
    <span>
        @Html.ActionLink("Create Forum", "Add", "Home", new { @class = "btn btn-back" })
    </span>
</div>

