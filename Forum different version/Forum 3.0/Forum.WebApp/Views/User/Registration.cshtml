@using Forum.WebModels.ViewModels
@model RegisterViewModel
@{
    ViewData["Title"] = "Registration";
}


    <div class="text-center"><h3>Registration</h3></div><br />
<form class="text-center form-group w-100 " asp-controller="User" asp-action="Registration" method="post">
    <div class="form-group">
        <label asp-for="FirstName"></label><br />
        <input asp-for="FirstName" /><br />
        <span asp-validation-for="FirstName" class="label-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label><br />
        <input asp-for="LastName" /><br />
        <span asp-validation-for="LastName" class="label-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="Username"></label><br />
        <input asp-for="Username" /><br />
        <span asp-validation-for="Username" class="label-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label><br />
        <input type="password" asp-for="Password" /><br />
        <span asp-validation-for="Password" class="label-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword"></label><br />
        <input type="password" asp-for="ConfirmPassword" /><br />
        <span asp-validation-for="ConfirmPassword" class="label-warning"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label><br />
        <input asp-for="Email" /><br />
        <span asp-validation-for="Email" class="label-warning"></span>
    </div>
    <button class="btn btn-info" type="submit">Register</button>
</form>
<br />

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}