
@{
    string userId = $"userId{ViewData["UserId"]}";
    string username = (string)ViewData["Username"];
    string receiverId = (string)ViewData["UserId"];
    string threadId = (string)ViewData["ThreadId"];
}

<div id="@userId" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center">Private message to <span style="color:aqua">&nbsp;@username</span></h4>
            </div>
            <div class="modal-body">
                <form asp-action="CreateMessage" asp-controller="Message" asp-route-receiverId="@receiverId" asp-route-threadId="@threadId" method="post">
                    <div class="form-group">
                        <textarea name="content" class="form-control" id="content" rows="3"></textarea>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-info" style="margin-right:10px; border-radius:7%">Send</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal" style="margin-left:10px; border-radius:7%">Close</button>
                    </div>
                </form>
            </div>

        </div>

    </div>
</div>