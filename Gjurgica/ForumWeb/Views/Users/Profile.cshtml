@model ForumViewModels.ViewModels.UserViewModel
<
<div class="container body-content">
    <div class="row post-header">
        <div class="section-heading">
            <span class="user-name">@Model.UserName</span>
        </div>
    </div>
    <div class="row user-profile">
        <div class="col-md-4">
            <img style="width:100px; height:100px;border:1px solid black" /><br/><br/>
            <button class="btn btn-back">Upload Photo</button>
        </div>
        <div class="col-md-8">
            <span class="user-name">@Model.FirstName @Model.LastName</span>
            <span class="user-email">@Model.Email</span><br/><br/>
            <span><span style="font-weight:bold">Joined:</span>@Model.Joined</span>
        </div>
    </div>
</div>

<div>
    <span id="heading-btn">@Html.ActionLink("Back to  Forum", "Index", "Category", new { @class = "btn" }, new { @style = "background-color: #555; color: #fff;transition: ease-in 0 1s;padding:0 10px 10px 10px;" })</span>
</div>
