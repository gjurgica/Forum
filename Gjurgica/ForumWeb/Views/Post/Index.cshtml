@model ForumViewModels.ViewModels.PostViewModel


<div class="container body-content">
    <div class="row post-header">
        @*<span class="post-title">@Model.Title</span>*@
        <span id="heading-btn">@Html.ActionLink("Back to " + @Model.Thread.Title, "Details", "Home", new { id = @Model.Thread.Id }, new { @class = "btn btn-back" })</span>
    </div>
    <div class="row post-index-content">
        <div class="col-md-3 post-author">
            <div class="post-author-img">
                <img src="" style="width:80px; height:80px;" />
            </div>
            @Html.ActionLink(@Model.User.UserName, "Details", "Profile", new { username = @Model.User.UserName }, new { @class = "btn btn-back" })
            <br /><span class="post-date">@Model.Created</span>
        </div>
        <div class="col-md-9 post-content-container">
            <div class="post-content">
                @Html.Raw(Model.Content)
            </div>
        </div>
    </div>
    @if (User.Identity.IsAuthenticated)
    {

        <div class="row reply-divider"></div>
    <div class="row">
        <span>@Html.ActionLink("Post Reply", "Add", "Reply", new { id = Model.Id }, new { @class = "btn btn-new-reply" })</span>
    </div>
    }
    @if (Model.Replies.Any())
    {
        foreach (var reply in Model.Replies)
        {
            <div class="row reply-content">
                <div class="col-md-3 reply-author">
                    <div class="post-author-img"><img /></div>
                    @Html.ActionLink(@Model.User.UserName, "Details", "Profile", new { username = @Model.User.UserName })
                    <span>@reply.Created</span>
                </div>
                <div class="col-md-9 reply-content">
                    <div class="post-content">
                        @Html.Raw(reply.Content)
                    </div>
                </div>
            </div>
        }
    }
</div>